<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example_grid_layout">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="5">

    <TextView
        android:id="@+id/number_7"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_column="0"
        android:layout_row="0"
        android:text="7" />

    <TextView
        android:id="@+id/number_8"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="8" />
    <TextView
        android:id="@+id/number_9"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:text="9" />
    <TextView
        android:id="@+id/number_4"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="4" />

    <TextView
        android:id="@+id/number_5"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="5" />

    <TextView
        android:id="@+id/numero_6"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="6" />
    <TextView
        android:id="@+id/signo_por"
        style="@style/AppTheme.CalculatorButton.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:gravity="center"
        android:text="ร" />

    <TextView
        android:id="@+id/textView10"
        style="@style/AppTheme.CalculatorButton.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="รท" />
    <TextView
        android:id="@+id/number_1"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_column="0"
        android:layout_row="2"
        android:text="1" />
    <TextView
        android:id="@+id/number_2"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="2" />

    <TextView
        android:id="@+id/number_3"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="3" />

    <TextView
        android:id="@+id/subtraction_sign"
        style="@style/AppTheme.CalculatorButton.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:gravity="center"
        android:text="-" />
    <TextView
        android:id="@+id/point"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:gravity="center_horizontal"
        android:text="." />
    <TextView
        android:id="@+id/zero"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_column="1"
        android:layout_row="3"
        android:text="0" />

    <TextView
        android:id="@+id/equal_sign"
        style="@style/AppTheme.CalculatorButton.Azul"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:text="=" />
    <TextView
        android:id="@+id/plus_sign"
        style="@style/AppTheme.CalculatorButton.Rojo"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:text="+" />

        <TextView
            android:id="@+id/Exit"
            style="@style/AppTheme.CalculatorButton.Azul"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:onClick="finishActivity"
            android:text="Salir" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>